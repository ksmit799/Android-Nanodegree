<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ksmit799.myappportfolio.Main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/HeaderText"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Popular Movies"
            android:id="@+id/moviesButton"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="false"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Stock Hawk"
            android:id="@+id/hawkButton"
            android:layout_gravity="center_horizontal"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Build it Bigger"
            android:id="@+id/buildButton"
            android:layout_gravity="center_horizontal"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Make your App Material"
            android:id="@+id/materialButton"
            android:layout_gravity="center_horizontal"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Go Ubiquitous"
            android:id="@+id/goButton"
            android:layout_gravity="center_horizontal"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Capstone"
            android:id="@+id/capstoneButton"
            android:layout_gravity="center_horizontal"
            android:onClick="displayMessage"
            android:background="#2E3D49"
            android:layout_margin="10dp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
